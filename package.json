{
  "name": "storyboard-gen",
  "version": "1.0.0",
  "description": "Generate cinematic storyboard films from a single image",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently \"npm run react\" \"wait-on http://localhost:3000 && cross-env ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "react": "cross-env BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "electron-build": "npm run build && electron-builder",
    "dist": "electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "node e2e/run-tests.js",
    "test:verify": "node scripts/test-setup.js"
  },
  "keywords": [
    "storyboard",
    "film",
    "generation",
    "ai"
  ],
  "author": "StoryboardGen",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@google/generative-ai": "^0.21.0",
    "@huggingface/inference": "^4.13.11",
    "@mui/icons-material": "^5.14.0",
    "@mui/material": "^5.14.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^9.0.0",
    "electron-store": "^8.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "konva": "^9.2.0",
    "openai": "^4.71.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-konva": "^18.2.10",
    "replicate": "^0.32.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@babel/runtime": "^7.28.6",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "chai": "^6.2.2",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "electron-mocha": "^13.1.0",
    "glob": "^13.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "react-scripts": "5.0.1",
    "supertest": "^7.2.2",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0",
    "whatwg-fetch": "^3.6.20"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.storyboardgen.app",
    "productName": "StoryboardGen",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "database/**/*",
      "node_modules/**/*"
    ],
    "icon": "build/icon.png",
    "mac": {
      "category": "public.app-category.graphics-design",
      "icon": "build/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons/1024x1024.png"
    }
  }
}
